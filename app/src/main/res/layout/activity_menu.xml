<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray">


    <RelativeLayout
        android:id="@+id/rlToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_menu_toolbar" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlTextExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlToolbar"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="30dp">

        <include layout="@layout/layout_expense_pane" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlPagerToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlTextExpense"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="25dp">

        <include layout="@layout/layout_pager_toolbar" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlViewPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlPagerToolbar"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp">

        <include layout="@layout/layout_menu_viewpager" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlKeyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">

        <include layout="@layout/layout_keyboard" />

    </RelativeLayout>


</RelativeLayout>
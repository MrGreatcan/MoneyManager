<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:paddingLeft="10dp"
    android:paddingTop="30dp"
    android:paddingRight="10dp"
    android:paddingBottom="40dp">

        <TextView
            android:id="@+id/tvMonthlyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/helvetica_bold"
            android:text="@string/aMenu_tMonthlyBalance"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            tools:ignore="RelativeOverlap">

            <TextView
                android:id="@+id/tvMonthlyCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_bold"
                android:text="@string/aMenu_tUserCurrency"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

            <TextView
                android:layout_toEndOf="@+id/tvMonthlyCurrency"
                android:id="@+id/tvMonthlyBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_bold"
                android:text="0"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

</RelativeLayout>
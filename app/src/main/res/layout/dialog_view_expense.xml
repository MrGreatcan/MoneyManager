<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvNoteTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helvetica_bold"
        android:inputType="textMultiLine"
        android:text="@string/dConfirm_tNote"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        tools:ignore="TextViewEdits" />

    <TextView
        android:id="@+id/tvNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNoteTitle"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/helvetica_roman"
        android:inputType="textMultiLine"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        tools:ignore="TextViewEdits" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNote"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/drawable_default_btn"
        android:fontFamily="@font/helvetica_roman"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="@string/button_btnClose"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />


</RelativeLayout>
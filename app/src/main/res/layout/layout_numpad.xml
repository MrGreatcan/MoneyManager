<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="365dp"
    android:layout_height="wrap_content"
    android:background="@color/colorLightGray"
    android:columnCount="4">

    <RelativeLayout
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:layout_margin="2dp">

        <View
            android:id="@+id/rlSlider"
            android:layout_width="70dp"
            android:layout_height="3dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:layout_margin="2dp"
        android:background="@drawable/drawable_numpad">

        <include layout="@layout/layout_field" />

    </RelativeLayout>

    <Button
        android:layout_margin="2dp"
        android:background="@drawable/drawable_numpad"
        android:fontFamily="@font/helvetica_bold"
        android:onClick="numpadClick"
        android:text="7"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <Button
        android:layout_margin="2dp"
        android:background="@drawable/drawable_numpad"
        android:fontFamily="@font/helvetica_bold"
        android:onClick="numpadClick"
        android:text="8"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <Button
        android:layout_margin="2dp"
        android:background="@drawable/drawable_numpad"
        android:fontFamily="@font/helvetica_bold"
        android:onClick="numpadClick"
        android:text="9"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnDate"
        android:layout_margin="2dp"
        android:background="@drawable/drawable_numpad"
        android:fontFamily="@font/helvetica_bold"
        android:text="date"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <Button
        android:layout_margin="2dp"
        android:background="@drawable/drawable_numpad"
        android:fontFamily="@font/helvetica_bold"
        android:onClick="numpadClick"
        android:text="4"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <Button
        android:layout_margin="2dp"
        android:background="@drawable/drawable_numpad"
        android:fontFamily="@font/helvetica_bold"
        android:onClick="numpadClick"
        android:text="5"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <Button
        android:layout_margin="2dp"
        android:background="@drawable/drawable_numpad"
        android:fontFamily="@font/helvetica_bold"
        android:onClick="numpadClick"
        android:text="6"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnOk"
        android:layout_rowSpan="3"
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:layout_margin="2dp"
        android:background="@drawable/drawable_btn_ok"
        android:fontFamily="@font/helvetica_bold"
        android:text="OK"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <Button
        android:layout_margin="2dp"
        android:background="@drawable/drawable_numpad"
        android:fontFamily="@font/helvetica_bold"
        android:onClick="numpadClick"
        android:text="1"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <Button
        android:layout_margin="2dp"
        android:background="@drawable/drawable_numpad"
        android:fontFamily="@font/helvetica_bold"
        android:onClick="numpadClick"
        android:text="2"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <Button
        android:layout_margin="2dp"
        android:background="@drawable/drawable_numpad"
        android:fontFamily="@font/helvetica_bold"
        android:onClick="numpadClick"
        android:text="3"
        android:textSize="20sp" />

    <Button
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:layout_margin="2dp"
        android:background="@drawable/drawable_numpad"
        android:fontFamily="@font/helvetica_bold"
        android:onClick="numpadClick"
        android:text="."
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <Button
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:layout_margin="2dp"
        android:background="@drawable/drawable_numpad"
        android:fontFamily="@font/helvetica_bold"
        android:onClick="numpadClick"
        android:text="0"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnRemove"
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:layout_margin="2dp"
        android:background="@drawable/drawable_numpad"
        android:drawableStart="@drawable/drawable_btn_remove"
        android:drawableTint="@color/colorPrimary"
        android:fontFamily="@font/helvetica_bold"
        android:paddingStart="25dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

</GridLayout>